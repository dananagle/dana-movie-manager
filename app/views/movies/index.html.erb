<div class="container movie-index">
  <div class="col-md-12">
      <div class="movie-table">
        <div class="table-responsive">
        <table class="table table-hover table-bordered table-condensed">
              <thead>
                <% if @current_user.nil? %>
                <% else %>
                  <h3> Welcome <%= @current_user.username %>! We already have <%= @movies.count %> movies in our system.  Please add to our collection. </h3>
                <% end %>
                  <%= link_to "New movie", new_path, class:"btn btn-default add-movie", remote: true %>
              </thead>
                <tr>
                  <th> <%= sort_by 'title', title: 'Title', current_column: @sort_column %> </th>
                  <th><%= sort_by 'format', title: 'Format ', current_column: @sort_column %>  </th>
                  <th><%= sort_by 'length', title: 'Length', current_column: @sort_column %>  </th>
                  <th><%= sort_by 'release', title: 'Release Year', current_column: @sort_column %>  </th>
                  <th><%= sort_by 'rating', title: 'Rating', current_column: @sort_column %>   </th>
                  <th> Delete </th>
                  <th> Edit </th>
                </tr>

              <tbody>
                <% @movies.each do |movie| %>
                <tr data-movie-id="<%= movie.id %>">
                  <%= render partial: 'table', locals: {movie: movie} %>
                </tr>
                <% end %>
              </tbody>
        </table>
      </div>

      </div>
      </div> <!--media-->
    </div> <!-- row -->
  </div> <!-- col-md-12-->
</div>
